<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.upup.demo.postsystem.ng.post.dao.PostDao">

    <resultMap id="BaseResultMap" type="com.upup.demo.postsystem.ng.post.entity.Post">
        <!--@Table post-->
        <result property="id" column="ID" jdbcType="INTEGER"/>
        <result property="content" column="CONTENT" jdbcType="VARCHAR"/>
        <result property="state" column="STATE" jdbcType="VARCHAR"/>
        <result property="createDatetime" column="CREATE_DATETIME" jdbcType="TIMESTAMP"/>
        <result property="updateDatetime" column="UPDATE_DATETIME" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="findById" resultMap="BaseResultMap">
        select
          ID, CONTENT, STATE, CREATE_DATETIME, UPDATE_DATETIME
        from post.post
        where ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="list" resultMap="BaseResultMap">
        select
        ID, CONTENT, STATE, CREATE_DATETIME, UPDATE_DATETIME
        from post.post
        <where>
            <choose>
                <when test="states !=null">
                    and STATE in
                    <foreach collection="states" item="state" index="index" open="(" separator="," close=")">
                        #{state}
                    </foreach>
                </when>
                <otherwise>
                    and STATE != 'ARCHIVED'
                </otherwise>
            </choose>
            <if test="createDate !=null">
                and CREATE_DATETIME >= #{createDate}
            </if>
            <if test="updateDate !=null">
                and UPDATE_DATETIME >= #{updateDate}
            </if>
        </where>
        <if test="limit != null">
            limit #{limit}
        </if>
        <if test="offset != null">
            offset #{offset}
        </if>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into post.post(CONTENT, STATE, CREATE_DATETIME, UPDATE_DATETIME)
        values (#{content}, #{state}, #{createDatetime}, #{updateDatetime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update post.post
        <set>
            <if test="content != null and content != ''">
                CONTENT = #{content},
            </if>
            <if test="state != null and state != ''">
                STATE = #{state},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from post.post where ID = #{id}
    </delete>

</mapper>